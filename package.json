{
  "name": "Blackjack",
  "version": "0.0.1",
  "description": "Blackjack Code Sample",
  "scripts": {
    "build": "webpack --config=./src/config/webpack.config.babel.js",
    "serve": "yarn run build && node ./build/tools/serve"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/PawkaHub/Blackjack"
  },
  "author": "Pieter Parker",
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-core": "^6.9.1",
    "babel-eslint": "^6.1.0",
    "babel-loader": "^6.2.4",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-runtime": "^6.15.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-0": "^6.16.0",
    "babel-preset-stage-1": "^6.5.0",
    "mobx-react-devtools": "^4.2.10",
    "react-hot-loader": "^3.0.0-beta.2",
    "stats-webpack-plugin": "^0.4.2",
    "strip-loader": "^0.1.2",
    "webpack": "2.1.0-beta.25",
    "webpack-dev-middleware": "^1.8.4",
    "webpack-hot-middleware": "^2.13.0",
    "webpack-node-externals": "^1.5.4",
    "webpack-notifier": "^1.4.1"
  },
  "dependencies": {
    "cors": "^2.8.1",
    "express": "^4.14.0",
    "mobx": "^2.2.2",
    "mobx-react": "^3.3.1",
    "navigation": "^3.0.0",
    "navigation-react": "^2.0.3",
    "radium": "^0.18.1",
    "react": "^15.3.2",
    "react-dom": "^15.1.0"
  },
  "babel": {
    "presets": [
      "es2015",
      "react",
      "stage-1",
      "stage-0"
    ],
    "plugins": [
      "transform-runtime",
      "transform-decorators-legacy",
      "react-hot-loader/babel"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "parserOptions": {
      "allowImportExportEverywhere": true
    },
    "extends": [
      "airbnb"
    ],
    "rules": {
      "jsx-quotes": "off",
      "arrow-body-style": [
        "error",
        "always"
      ]
    }
  }
}
